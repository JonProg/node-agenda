<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-5">
            <h1 class="text-center display-1">Agenda</h1>
            <p class="text-center lead display-8">Seus contatos estão abaixo</p>

            <%- include('includes/messages') %>
            
            <% if (contacts && contacts.length > 0){%>
            <div class="responsive-table">
                <table class="table my-5">
                    <% contacts.forEach(contact => { %>
                        <tr>
                            <td><%= contact.name  %></td>
                            <td><%= contact.surname %></td>
                            <td><%= contact.phone %></td>
                            <td><%= contact.email %></td>
                            <td><a href="/contact/<%= contact._id %>">Editar</a></td>
                            <td><a class="text-danger" href="/contact/delete/<%= contact._id %>">Excluir</a></td>
                        </tr>
                    <% }); %>
                </table>
            </div>
            <% }else{%>
                <p class="text-center lead">Não existem contatos na sua agenda</p>
            <% } %>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>
<%- include('includes/footer') %>